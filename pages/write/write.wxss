/* pages/write/write.wxss */
.select-word-num-button {
  display: flex;
}
.select-word-num-button button {
  width: 20%;
}
.change-button {
  margin-top: 20px;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;
}
.change-button button {
  background-color: #8bc34a;
}
.word {
  display: flex;
  flex-direction: column;
  width: 80%;
  height: 50%;
  justify-content: center;
  align-items: center;
  position: relative;
  border: 1px solid #000 ;
}
.show-words {
  display: flex;
  flex-direction: row;
}
.writing {
  position: absolute;
  right: 0;
  width: 200%;
  height: 100%;
  color: #fff0;
  caret-color: #fff;
  bottom: 0;
  opacity: 0;
  
}
.show-words-main {
  margin: 0 2.5px;
  width: 1em;
  text-align: center;
  border-bottom: 2px solid #ccc;
}


.wordsList {
  display: flex;
  height: auto;
  width: 100%;
  align-items: center;
  margin: 15px 0;
  border: 1px solid #000;
}
.wordsList-test {
  height: auto;
  border: 1px solid #000;
  margin: 15px 0;
}
.left image {
  height: 50px;
  width: 50px;
  display: inline-block;
}
.word-mian {
  height: 70vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.isCorrect button {
  margin: 10px 0;
}
.rate-of-listening {
  width: 100%;
  text-align: center;
  margin: 10px 0;
}
.info {
  text-align: center;
}
.isCorrect {
  text-align: center;
  margin: 10px 0;
}
.btn-login {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}
.btn-login button {
  background-color: #ffda2a;
}